{
  "publisher": "YunYouJun",
  "name": "valaxy",
  "displayName": "Valaxy",
  "version": "0.0.5",
  "private": true,
  "packageManager": "pnpm@8.1.1",
  "description": "Valaxy support for VS Code",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/YunYouJun",
  "homepage": "https://github.com/YunYouJun/valaxy-vscode#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/valaxy-vscode"
  },
  "bugs": {
    "url": "https://github.com/YunYouJun/valaxy-vscode/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/YunYouJun"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/logo.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "valaxy.preview-refresh",
        "category": "Valaxy",
        "title": "Preview Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "valaxy.delete-post",
        "category": "Valaxy",
        "title": "Delete post",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "valaxy.delete-post",
          "when": "view =~ /valaxy-posts/",
          "group": "inline@1"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Valaxy",
      "properties": {
        "valaxy.enabled": {
          "type": "boolean",
          "scope": "window",
          "description": "Force enable extension",
          "default": false
        },
        "valaxy.port": {
          "type": "number",
          "scope": "window",
          "description": "The port of Valaxy server",
          "default": 4859
        },
        "valaxy.postsFolder": {
          "type": "string",
          "scope": "window",
          "description": "The folder of your posts",
          "default": "pages/posts"
        },
        "valaxy.confirmDelete": {
          "type": "boolean",
          "scope": "window",
          "description": "Confirm before deleting a post",
          "default": false
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "valaxy",
          "title": "Valaxy",
          "icon": "res/logo.svg",
          "when": "valaxy-enabled"
        }
      ]
    },
    "views": {
      "valaxy": [
        {
          "id": "valaxy-posts",
          "name": "Valaxy Posts",
          "when": "valaxy-enabled"
        },
        {
          "type": "webview",
          "id": "valaxy-preview",
          "name": "Preview",
          "when": "valaxy-enabled"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@antfu/ni": "^0.21.3",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "axios": "^1.3.5",
    "bumpp": "^9.1.0",
    "eslint": "^8.38.0",
    "esno": "^0.16.3",
    "gray-matter": "^4.0.3",
    "pnpm": "^8.1.1",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "valaxy": "^0.14.25",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "vsce": "^2.15.0"
  }
}
